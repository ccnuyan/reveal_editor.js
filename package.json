{
  "name": "reveal_editor",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "eslint": "eslint --ignore-path .eslintignore ./**/*.js",
    "wp-dev": "export NODE_ENV=development && webpack-dev-server --config=webpack.dev-config.js",
    "fe-dev": "export NODE_ENV=development && nodemon --config nodemon.json --delay 3000ms",
    "wp-build": "export NODE_ENV=production && webpack --config=webpack.build-config.js"
  },
  "#comment# - browserslist": "for postcss autoprefix, which is in ./webpack/postcss.config.js",
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie <= 8"
  ],
  "pre-commit": [
    "eslint"
  ],
  "author": "ccnuyan",
  "license": "MIT",
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.1",
    "compression": "^1.7.0",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.9.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.15.4",
    "express-delay": "^0.2.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "humps": "^2.0.1",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "markdown-loader": "^2.0.1",
    "material-colors": "^1.2.5",
    "node-sass": "^4.5.3",
    "pixrem": "^4.0.1",
    "pleeease-filters": "^4.0.0",
    "postcss-calc": "^5.3.1",
    "postcss-color-function": "^3.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.1.1",
    "postcss-loader": "^1.3.3",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nested": "^1.0.1",
    "postcss-nesting": "^2.3.1",
    "postcss-partial-import": "^3.1.1",
    "postcss-selector-matches": "^2.0.5",
    "postcss-selector-not": "^2.0.0",
    "postcss-url": "^6.0.4",
    "pre-commit": "^1.2.2",
    "react": "^15.6.1",
    "react-color": "^2.13.5",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "svg-inline-loader": "^0.8.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "uuid": "^3.1.0",
    "webpack": "^3.4.1",
    "whatwg-fetch": "^2.0.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "parser": "babel-eslint",
    "plugins": [
      "standard",
      "import",
      "jsx-a11y",
      "react",
      "mocha",
      "promise"
    ],
    "extends": [
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:mocha/recommended",
      "plugin:promise/recommended",
      "eslint:recommended",
      "airbnb/base"
    ],
    "env": {
      "browser": true,
      "mocha": true,
      "es6": true
    },
    "globals": {
      "$": true,
      "katex": true,
      "printError": true,
      "printMessage": true,
      "CKEDITOR": true,
      "Reveal": true,
      "RevealEditor": true
    },
    "rules": {
      "camelcase": 0,
      "no-underscore-dangle": 0,
      "consistent-return": 0,
      "no-unused-expressions": 0,
      "max-len": [
        "error",
        160
      ],
      "import/no-extraneous-dependencies": 0,
      "arrow-body-style": 0,
      "no-return-assign": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-closing-bracket-location": 2,
      "react/jsx-curly-spacing": [
        2,
        "always"
      ],
      "react/no-set-state": 0,
      "react/jsx-indent": [
        2,
        2
      ],
      "id-length": 0,
      "object-curly-spacing": [
        2,
        "always"
      ]
    }
  },
  "dependencies": {
    "es6-promise": "^4.1.1",
    "svg.js": "^2.6.3"
  }
}
